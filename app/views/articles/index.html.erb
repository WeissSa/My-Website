<div class="top">
  <h1>Projects</h1>
</div>

<div class="middle">
  <ul>
    <% @articles.reverse_each do |article| %>
      <% unless article.archived? %>
      <li>
        <div class="article-title">
          <div>
            <%= link_to article.title, article %>
          </div>
          <a href="<%= article_path(article) %>">
          <img src="<%= article.thumbnail %>" alt="Picture related to <%= article.title %>" class="thumbnail">
          </a>
        </div>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
